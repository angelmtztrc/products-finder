{
  "name": "products-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "autoprefixer": "10.x",
    "cross-env": "7.x",
    "postcss": "^8.x",
    "prettier": "^2.x",
    "prettier-plugin-tailwind": "^2.x",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "tailwindcss": "2.x"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-css:develop": "tailwindcss build tailwind.css -o src/styles.css",
    "build-css:production": "cross-env NODE_ENV=production tailwindcss build tailwind.css -o src/styles.css",
    "format": "prettier --write \"./src/**/*.{js,jsx}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
